{{> head}}
<div class="row">
    <div class="col-md-4 offset-md-4 mt-4">
        <div class="card">
            <div class="card-header">
                <h3>Sign Up</h3>
            </div>
            <div class="card-body">
                <form action="/signup" method="POST">
                    <div class="form-group">
                        <input type="text" name="username" placeholder="insert username" class="form-control">
                    </div>
                    <div class="form group">
                        <input type="password" name="password" placeholder="insert password" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-primary btn-block mt-4"> Sign up</button>
                </form>
            </div>
        </div>
    </div>
</div>
{{> footer}}